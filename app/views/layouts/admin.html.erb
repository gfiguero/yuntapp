<!DOCTYPE html>
<html data-theme="light">
  <head>
    <title><%= content_for(:title) || "Yuntapp Admin" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="drawer lg:drawer-open">
      <input id="my-drawer-2" type="checkbox" class="drawer-toggle">
      <div class="drawer-content flex flex-col items-center justify-start min-h-screen">
        <!-- Page content here -->
        <div class="w-full navbar bg-base-100 lg:hidden shadow-sm mb-4">
            <div class="flex-none">
                <label for="my-drawer-2" class="btn btn-square btn-ghost drawer-button lg:hidden">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-6 h-6 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
                </label>
            </div>
            <div class="flex-1 px-2 mx-2 font-bold text-xl">Admin Panel</div>
        </div>

        <main class="container mx-auto mt-2 mb-5 px-5 flex flex-col w-full">
            <% if session[:impersonated_neighborhood_association_id] %>
              <div class="alert alert-warning mb-4">
                <%= icon("users", class: "w-6 h-6") %>
                <span>Estás administrando la junta: <strong><%= current_neighborhood_association.name %></strong></span>
                <%= button_to "Dejar de administrar", admin_stop_impersonating_path, class: "btn btn-sm btn-ghost" %>
              </div>
            <% end %>

            <div class="flex justify-between items-center mb-4">
                <h1 class="text-2xl font-bold">Administración</h1>
                <%= link_to "Volver a la App", root_path, class: "btn btn-sm btn-outline" %>
            </div>
            <%= yield %>
        </main>
        <%= render "shared/footer" %>
      </div>
      <div class="drawer-side h-full">
        <label for="my-drawer-2" aria-label="close sidebar" class="drawer-overlay"></label>
        <ul class="menu p-4 w-80 min-h-full bg-base-200 text-base-content h-full">
          <!-- Sidebar content here -->
          <li class="mb-4 text-xl font-bold px-4">Yuntapp Admin</li>
          <li><%= link_to "Dashboard", admin_root_path, class: ("active" if current_page?(admin_root_path)) %></li>

          <li class="menu-title mt-4">Entidades</li>
          <li><%= link_to "Delegaciones Vecinales", admin_neighborhood_delegations_path, class: ("active" if controller_name == "neighborhood_delegations") %></li>
          <li><%= link_to "Domicilios", admin_household_units_path, class: ("active" if controller_name == "household_units") %></li>
          <li>
            <%= link_to admin_verifications_path, class: ("active" if controller_name == "verifications") do %>
              Verificaciones
              <% pending_verifications = current_neighborhood_association ? VerifiedIdentity.pending.joins(:users).where(users: { neighborhood_association_id: current_neighborhood_association.id }).count : 0 %>
              <% if pending_verifications > 0 %>
                <span class="badge badge-warning badge-sm"><%= pending_verifications %></span>
              <% end %>
            <% end %>
          </li>
          <li>
            <%= link_to admin_members_path, class: ("active" if controller_name == "members") do %>
              Socios
              <% pending = current_neighborhood_association ? current_neighborhood_association.members.where(status: "pending").count : 0 %>
              <% if pending > 0 %>
                <span class="badge badge-warning badge-sm"><%= pending %></span>
              <% end %>
            <% end %>
          </li>
          <li><%= link_to "Directiva", admin_board_members_path, class: ("active" if controller_name == "board_members") %></li>
          <li><%= link_to "Certificados", admin_residence_certificates_path, class: ("active" if controller_name == "residence_certificates") %></li>
          <li><%= link_to "Publicaciones", admin_listings_path, class: ("active" if controller_name == "listings") %></li>

          <li class="menu-title mt-4">Sistema</li>
          <li><%= link_to "Cerrar Sesión", destroy_user_session_path, data: { turbo_method: :delete } %></li>
        </ul>

      </div>
    </div>
    <%= yield :filter_drawer %>
  </body>
</html>

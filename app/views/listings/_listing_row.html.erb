<tr class="hover:bg-base-300">
  <td><%= listing.id %></td>
  <td><%= listing.name %></td>
  <td><%= listing.active %></td>
  <td>
    <div class="tooltip" data-tip="<%= I18n.t('listings.actions.show') %>">
      <%= link_to icon('show'), listing, class: "btn btn-sm btn-info" %>
    </div>
    <div class="tooltip" data-tip="<%= I18n.t('listings.actions.edit') %>">
      <%= link_to icon('edit'), edit_listing_path(listing), class: "btn btn-sm btn-success" %>
    </div>
    <div class="tooltip" data-tip="<%= I18n.t('listings.actions.delete') %>">
      <%= button_to icon('delete'), listing, class: "btn btn-sm btn-error", method: :delete %>
    </div>
  </td>
</tr>

<% content_for :title do %>
  <%= I18n.t('listings.index.title') %>
<% end %>

<% content_for :breadcrumb do %>
  <li><%= link_to I18n.t('listings.index.title'), listings_path %></li>
  <li><%= link_to @listing.id, listing_path(@listing) %></li>
  <li><%= I18n.t('actions.edit') %></li>
<% end %>

<div class="w-full">
  <h1 class="font-bold text-4xl my-4"><%= I18n.t('listings.index.title') %></h1>
  <h3 class="font-bold text-xl mb-4"><%= I18n.t('listings.show.identifier', id: @listing.id) %></h3>
  <%= render "buttons" %>
  <%= render "form", listing: @listing %>
</div>

<div class="w-full">
  <h1 class="font-bold text-4xl my-4"><%= I18n.t('panel.verification.index.title') %></h1>

  <div class="flex flex-row gap-2 mb-4">
    <%= link_to raw(icon('back') + I18n.t('actions.back')), panel_root_path, class: "btn btn-soft" %>
  </div>

  <div class="mb-4">
    <% if @verified_identity.pending_verification? %>
      <div class="badge badge-warning badge-lg"><%= I18n.t('activerecord.attributes.verified_identity/verification_status.pending') %></div>
      <p class="text-sm mt-2"><%= I18n.t('panel.verification.help.pending_review') %></p>
    <% elsif @verified_identity.verified? %>
      <div class="badge badge-success badge-lg"><%= I18n.t('activerecord.attributes.verified_identity/verification_status.verified') %></div>
    <% elsif @verified_identity.rejected_verification? %>
      <div class="badge badge-error badge-lg"><%= I18n.t('activerecord.attributes.verified_identity/verification_status.rejected') %></div>
    <% end %>
  </div>

  <dl class="mb-4 divide-y divide-gray-400 w-1/3">
    <div class="p-2 grid gap-2">
      <dt class="font-medium"><%= I18n.t('activerecord.attributes.verified_identity.name') %></dt>
      <dd><%= @verified_identity.name %></dd>
    </div>
    <div class="p-2 grid gap-2">
      <dt class="font-medium"><%= I18n.t('activerecord.attributes.verified_identity.run') %></dt>
      <dd><%= @verified_identity.run %></dd>
    </div>
    <div class="p-2 grid gap-2">
      <dt class="font-medium"><%= I18n.t('activerecord.attributes.verified_identity.phone') %></dt>
      <dd><%= @verified_identity.phone || "â€”" %></dd>
    </div>
    <% if @verified_identity.identity_document.attached? %>
      <div class="p-2 grid gap-2">
        <dt class="font-medium"><%= I18n.t('activerecord.attributes.verified_identity.identity_document') %></dt>
        <dd>
          <% if @verified_identity.identity_document.image? %>
            <%= image_tag rails_blob_path(@verified_identity.identity_document, disposition: "inline"), class: "max-w-xs rounded-lg" %>
          <% else %>
            <%= link_to @verified_identity.identity_document.filename, rails_blob_path(@verified_identity.identity_document, disposition: "attachment"), class: "link link-primary" %>
          <% end %>
        </dd>
      </div>
    <% end %>
  </dl>
</div>

    <%# CAMPO: Region %>
    <%= turbo_frame_tag "field_region" do %>
      <%= form_with(url: panel_onboarding_step1_path, method: :patch, data: { turbo_frame: "step1_form" }) do |form| %>
        <%
          # Helper para clase de selector
          def select_class(value)
            return "select-success" if value.present?
            ""
          end
        %>
        <label class="floating-label">
          <%= form.select :region_id, 
              options_for_select(cascading_data.map { |r| [r[:name], r[:id]] }, selected_region_id), 
              { prompt: I18n.t('panel.onboarding.step1.select_region') },
              { class: "select w-full #{select_class(selected_region_id)}", onchange: "this.form.requestSubmit()" } 
          %>
          <span><%= I18n.t('panel.onboarding.step1.region_label') %></span>
        </label>
      <% end %>
    <% end %>
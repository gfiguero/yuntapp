<div class="w-full">
  <h1 class="font-bold text-4xl my-4"><%= I18n.t('panel.onboarding.title') %></h1>
  <p class="text-base-content/60 mb-4"><%= I18n.t('panel.onboarding.subtitle') %></p>

  <%= render "steps", current_step: 1 %>

  <h2 class="font-bold text-2xl mb-2"><%= I18n.t('panel.onboarding.step1.title') %></h2>
  <p class="text-base-content/60 mb-6"><%= I18n.t('panel.onboarding.step1.description') %></p>

  <%# Contenedor principal sin form global %>
  <div class="grid gap-4 w-full max-w-md">
    
    <%# CAMPO: Region %>
    <%= render "step1_field_region", cascading_data: @cascading_data, selected_region_id: @selected_region_id %>

    <%# CAMPO: Commune %>
    <%= render "step1_field_commune", cascading_data: @cascading_data, selected_region_id: @selected_region_id, selected_commune_id: @selected_commune_id %>

    <%# CAMPO: Association %>
    <%= render "step1_field_association", cascading_data: @cascading_data, selected_region_id: @selected_region_id, selected_commune_id: @selected_commune_id, selected_association_id: @selected_association_id %>

  </div>

  <div class="mt-6">
    <%= render "step1_submit_button", selected_association_id: @selected_association_id, selected_region_id: @selected_region_id, selected_commune_id: @selected_commune_id %>
  </div>
</div>

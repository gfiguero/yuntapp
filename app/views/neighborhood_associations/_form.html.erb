<%= form_with(model: neighborhood_association, class: "grid gap-4 w-1/3") do |form| %>

  <% invalid = neighborhood_association.errors.include?(:id) %>
  <%= form.label :id, I18n.t('activerecord.attributes.neighborhood_association.id'), class: "floating-label" do %>
    <%= form.text_field :id, class: "input w-full validator #{'input-error' if invalid}", required: true, placeholder: I18n.t('activerecord.attributes.neighborhood_association.id') %>
    <span><%= I18n.t('activerecord.attributes.neighborhood_association.id') %></span>
  <% end %>
  <%= raw(error_message(invalid, neighborhood_association.errors.full_messages_for(:id))) %>

  <% invalid = neighborhood_association.errors.include?(:name) %>
  <%= form.label :name, I18n.t('activerecord.attributes.neighborhood_association.name'), class: "floating-label" do %>
    <%= form.text_field :name, class: "input w-full validator #{'input-error' if invalid}", required: true, placeholder: I18n.t('activerecord.attributes.neighborhood_association.name') %>
    <span><%= I18n.t('activerecord.attributes.neighborhood_association.name') %></span>
  <% end %>
  <%= raw(error_message(invalid, neighborhood_association.errors.full_messages_for(:name))) %>

  <%= form.submit I18n.t('actions.save'), class: "btn btn-success" %>
<% end %>

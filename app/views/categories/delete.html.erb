<% content_for :title do %>
  <%= I18n.t('categories.index.title') %>
<% end %>

<% content_for :breadcrumb do %>
  <li><%= link_to I18n.t('categories.index.title'), categories_path %></li>
  <li><%= link_to @category.id, category_path(@category) %></li>
  <li><%= I18n.t('actions.delete') %></li>
<% end %>

<div class="w-full">
  <h1 class="font-bold text-4xl my-4"><%= I18n.t('categories.index.title') %></h1>
  <h3 class="font-bold text-xl mb-4"><%= I18n.t('categories.show.identifier', id: @category.id) %></h3>
  <%= render "buttons" %>
  <%= render @category %>
</div>

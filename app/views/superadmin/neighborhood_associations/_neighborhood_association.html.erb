<div id="<%= dom_id neighborhood_association %>" class="card bg-base-100 shadow-sm border border-base-content/5 mb-8 w-1/2">
  <div class="card-body p-0">
    <div class="list bg-base-100 rounded-box shadow-md">
      
      <div class="list-row hover:bg-base-200/50 transition-colors p-4 border-b border-base-200 last:border-0">
        <div class="text-4xl font-thin opacity-30">
          <%= icon('id') %>
        </div>
        <div class="flex-1">
          <div class="text-xs font-bold uppercase tracking-wider opacity-60 mb-1"><%= I18n.t('activerecord.attributes.neighborhood_association.id') %></div>
          <div class="text-lg font-medium"><%= neighborhood_association.id %></div>
        </div>
      </div>

      <div class="list-row hover:bg-base-200/50 transition-colors p-4 border-b border-base-200 last:border-0">
        <div class="text-4xl font-thin opacity-30">
          <%= icon('user') %>
        </div>
        <div class="flex-1">
          <div class="text-xs font-bold uppercase tracking-wider opacity-60 mb-1"><%= I18n.t('activerecord.attributes.neighborhood_association.name') %></div>
          <div class="text-lg font-medium"><%= neighborhood_association.name %></div>
        </div>
      </div>

      <% if neighborhood_association.commune.present? %>
        <div class="list-row hover:bg-base-200/50 transition-colors p-4 border-b border-base-200 last:border-0">
          <div class="text-4xl font-thin opacity-30">
            <%= icon('map-pin') %>
          </div>
          <div class="flex-1">
            <div class="text-xs font-bold uppercase tracking-wider opacity-60 mb-1"><%= I18n.t('activerecord.attributes.neighborhood_association.commune') %></div>
            <div class="text-lg font-medium"><%= neighborhood_association.commune.name %></div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>

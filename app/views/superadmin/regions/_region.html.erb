<div id="<%= dom_id region %>">
  <dl class="mb-4 divide-y divide-gray-400 w-1/3">
    <div class="p-2 grid gap-2">
      <dt class="font-medium"><%= I18n.t('attributes.region.id') %></dt>
      <dd><%= region.id %></dd>
    </div>
    <div class="p-2 grid gap-2">
      <dt class="font-medium"><%= I18n.t('attributes.region.name') %></dt>
      <dd><%= region.name %></dd>
    </div>
    <div class="p-2 grid gap-2">
      <dt class="font-medium"><%= I18n.t('attributes.region.country') %></dt>
      <dd><%= region.country.name %></dd>
    </div>
  </dl>
</div>

<% content_for :title do %>
  <%= I18n.t('superadmin.regions.index.title') %>
<% end %>

<% content_for :breadcrumb do %>
  <li><%= link_to I18n.t('superadmin.regions.index.title'), superadmin_regions_path %></li>
  <li><%= link_to @region.id, superadmin_region_path(@region) %></li>
  <li><%= I18n.t('actions.edit') %></li>
<% end %>

<div class="w-full">
  <h1 class="font-bold text-4xl my-4"><%= I18n.t('superadmin.regions.index.title') %></h1>
  <h3 class="font-bold text-xl mb-4"><%= I18n.t('superadmin.regions.show.identifier', id: @region.id) %></h3>
  <%= render "buttons" %>
  <%= render "form", region: @region %>
</div>

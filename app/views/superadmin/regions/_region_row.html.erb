<tr class="hover:bg-base-300">
  <td><%= region.name %></td>
  <td><%= region.country.name %></td>
  <td>
    <div class="tooltip" data-tip="<%= I18n.t('actions.show') %>">
      <%= link_to icon('show'), [:superadmin, region], class: "btn btn-sm btn-soft btn-info" %>
    </div>
    <div class="tooltip" data-tip="<%= I18n.t('actions.edit') %>">
      <%= link_to icon('edit'), edit_superadmin_region_path(region), class: "btn btn-sm btn-soft btn-success" %>
    </div>
    <div class="tooltip" data-tip="<%= I18n.t('actions.delete') %>">
      <%= link_to icon('delete'), delete_superadmin_region_path(region), class: "btn btn-sm btn-soft btn-warning" %>
    </div>
  </td>
</tr>

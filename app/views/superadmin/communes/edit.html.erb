  <h1 class="font-bold text-4xl my-4"><%= I18n.t('superadmin.communes.index.title') %></h1>
  <h3 class="font-bold text-xl mb-4"><%= I18n.t('superadmin.communes.show.identifier', id: @commune.id) %></h3>
  <%= render "buttons" %>
  <%= render "form", commune: @commune %>
</div>

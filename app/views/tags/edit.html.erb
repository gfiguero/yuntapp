<% content_for :title do %>
  <%= I18n.t('tags.index.title') %>
<% end %>

<% content_for :breadcrumb do %>
  <li><%= link_to I18n.t('tags.index.title'), tags_path %></li>
  <li><%= link_to @tag.id, tag_path(@tag) %></li>
  <li><%= I18n.t('actions.edit') %></li>
<% end %>

<div class="w-full">
  <h1 class="font-bold text-4xl my-4"><%= I18n.t('tags.index.title') %></h1>
  <h3 class="font-bold text-xl mb-4"><%= I18n.t('tags.show.identifier', id: @tag.id) %></h3>
  <%= render "buttons" %>
  <%= render "form", tag: @tag %>
</div>

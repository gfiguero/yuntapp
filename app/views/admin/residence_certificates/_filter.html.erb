<% content_for :filter_drawer do %>
  <div class="drawer z-50">
    <%= checkbox_tag :filter, true, class: "drawer-toggle" %>
    <div class="drawer-side">
      <%= label_tag :filter, "", class: "drawer-overlay", aria: { label: "close sidebar" } %>

      <div class="menu bg-base-200 min-h-full w-80 p-4">
        <h3 class="font-bold text-xl"><%= I18n.t('actions.filter') %></h3>
        <div class="divider"></div>

        <%= form_tag admin_residence_certificates_path, method: :get do %>

          <div class="grid gap-4">
            <div>
              <%= label_tag :id, I18n.t('attributes.residence_certificate.id'), class: "label" %>
              <%= text_field_tag :id, params[:id], class: "input", autocomplete: "off" %>
            </div>

            <div>
              <%= label_tag :status, I18n.t('attributes.residence_certificate.status'), class: "label" %>
              <%= select_tag :status, options_for_select(ResidenceCertificate::STATUSES.map { |s| [I18n.t("residence_certificate.statuses.#{s}"), s] }, params[:status]), { prompt: "Todos", class: "select w-full" } %>
            </div>

            <div>
              <%= label_tag :folio, I18n.t('attributes.residence_certificate.folio'), class: "label" %>
              <%= text_field_tag :folio, params[:folio], class: "input", autocomplete: "off" %>
            </div>

            <%= button_tag raw(icon('filter') + I18n.t('actions.filter')), type: 'submit', class: "btn btn-info" %>
            <%= link_to raw(icon('restart') + I18n.t('actions.restart')), admin_residence_certificates_path, class: "btn" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
<% end %>

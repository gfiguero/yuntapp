<%= form_with(model: [:admin, member], class: "grid gap-4 w-1/3") do |form| %>

  <% invalid = member.errors.include?(:household_unit_id) %>
  <%= form.label :household_unit_id, I18n.t('attributes.member.household_unit'), class: "floating-label" do %>
    <%= form.collection_select :household_unit_id, HouseholdUnit.all, :id, :number, { prompt: true }, { class: "select w-full validator #{'input-error' if invalid}", required: true } %>
    <span><%= I18n.t('attributes.member.household_unit') %></span>
  <% end %>
  <%= raw(error_message(invalid, member.errors.full_messages_for(:household_unit_id))) %>

  <% invalid = member.errors.include?(:first_name) %>
  <%= form.label :first_name, I18n.t('attributes.member.first_name'), class: "floating-label" do %>
    <%= form.text_field :first_name, class: "input w-full validator #{'input-error' if invalid}", required: true, placeholder: I18n.t('attributes.member.first_name') %>
    <span><%= I18n.t('attributes.member.first_name') %></span>
  <% end %>
  <%= raw(error_message(invalid, member.errors.full_messages_for(:first_name))) %>

  <% invalid = member.errors.include?(:last_name) %>
  <%= form.label :last_name, I18n.t('attributes.member.last_name'), class: "floating-label" do %>
    <%= form.text_field :last_name, class: "input w-full validator #{'input-error' if invalid}", required: true, placeholder: I18n.t('attributes.member.last_name') %>
    <span><%= I18n.t('attributes.member.last_name') %></span>
  <% end %>
  <%= raw(error_message(invalid, member.errors.full_messages_for(:last_name))) %>

  <% invalid = member.errors.include?(:run) %>
  <%= form.label :run, I18n.t('attributes.member.run'), class: "floating-label" do %>
    <%= form.text_field :run, class: "input w-full validator #{'input-error' if invalid}", required: true, placeholder: I18n.t('attributes.member.run') %>
    <span><%= I18n.t('attributes.member.run') %></span>
  <% end %>
  <%= raw(error_message(invalid, member.errors.full_messages_for(:run))) %>

  <% invalid = member.errors.include?(:phone) %>
  <%= form.label :phone, I18n.t('attributes.member.phone'), class: "floating-label" do %>
    <%= form.text_field :phone, class: "input w-full validator #{'input-error' if invalid}", placeholder: I18n.t('attributes.member.phone') %>
    <span><%= I18n.t('attributes.member.phone') %></span>
  <% end %>
  <%= raw(error_message(invalid, member.errors.full_messages_for(:phone))) %>

  <% invalid = member.errors.include?(:email) %>
  <%= form.label :email, I18n.t('attributes.member.email'), class: "floating-label" do %>
    <%= form.email_field :email, class: "input w-full validator #{'input-error' if invalid}", placeholder: I18n.t('attributes.member.email') %>
    <span><%= I18n.t('attributes.member.email') %></span>
  <% end %>
  <%= raw(error_message(invalid, member.errors.full_messages_for(:email))) %>

  <%= form.submit I18n.t('actions.save'), class: "btn btn-success" %>
<% end %>

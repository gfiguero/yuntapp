<tr class="hover:bg-base-300">
  <td><%= household_unit.number %></td>
  <td><%= household_unit.neighborhood_delegation.name %></td>
  <td>
    <div class="tooltip" data-tip="<%= I18n.t('actions.show') %>">
      <%= link_to icon('show'), [:admin, household_unit], class: "btn btn-sm btn-soft btn-info" %>
    </div>
    <div class="tooltip" data-tip="<%= I18n.t('actions.edit') %>">
      <%= link_to icon('edit'), edit_admin_household_unit_path(household_unit), class: "btn btn-sm btn-soft btn-success" %>
    </div>
    <div class="tooltip" data-tip="<%= I18n.t('actions.delete') %>">
      <%= link_to icon('delete'), delete_admin_household_unit_path(household_unit), class: "btn btn-sm btn-soft btn-warning" %>
    </div>
  </td>
</tr>

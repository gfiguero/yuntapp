<tr class="hover:bg-base-300">
  <td><%= user.email %></td>
  <td><%= user.first_name %></td>
  <td><%= user.last_name %></td>
  <td>
    <% if user.admin? %>
      <span class="badge badge-success text-white">Admin</span>
    <% else %>
      <span class="badge badge-ghost">User</span>
    <% end %>
  </td>
  <td>
    <div class="tooltip" data-tip="<%= I18n.t('actions.show') %>">
      <%= link_to icon('show'), [:admin, user], class: "btn btn-sm btn-soft btn-info" %>
    </div>
    <div class="tooltip" data-tip="<%= I18n.t('actions.edit') %>">
      <%= link_to icon('edit'), edit_admin_user_path(user), class: "btn btn-sm btn-soft btn-success" %>
    </div>
    <div class="tooltip" data-tip="<%= I18n.t('actions.delete') %>">
      <%= link_to icon('delete'), delete_admin_user_path(user), class: "btn btn-sm btn-soft btn-warning" %>
    </div>
  </td>
</tr>

<div id="<%= dom_id user %>">
  <dl class="mb-4 divide-y divide-gray-400 w-1/2">
    <div class="p-2 grid gap-2">
      <dt class="font-medium"><%= I18n.t('activerecord.attributes.user.id') %></dt>
      <dd><%= user.id %></dd>
    </div>
    <div class="p-2 grid gap-2">
      <dt class="font-medium"><%= I18n.t('activerecord.attributes.user.first_name') %></dt>
      <dd><%= user.first_name %></dd>
    </div>
    <div class="p-2 grid gap-2">
      <dt class="font-medium"><%= I18n.t('activerecord.attributes.user.last_name') %></dt>
      <dd><%= user.last_name %></dd>
    </div>
    <div class="p-2 grid gap-2">
      <dt class="font-medium"><%= I18n.t('activerecord.attributes.user.email') %></dt>
      <dd><%= user.email %></dd>
    </div>
    <div class="p-2 grid gap-2">
      <dt class="font-medium"><%= I18n.t('activerecord.attributes.user.admin') %></dt>
      <dd>
        <% if user.admin? %>
          <span class="badge badge-success text-white">Admin</span>
        <% else %>
          <span class="badge badge-ghost">User</span>
        <% end %>
      </dd>
    </div>
  </dl>
</div>

<%= form_with(model: [:admin, country], class: "grid gap-4 w-1/3") do |form| %>

  <% invalid = country.errors.include?(:name) %>
  <%= form.label :name, I18n.t('attributes.country.name'), class: "floating-label" do %>
    <%= form.text_field :name, class: "input w-full validator #{'input-error' if invalid}", required: true, placeholder: I18n.t('attributes.country.name') %>
    <span><%= I18n.t('attributes.country.name') %></span>
  <% end %>
  <%= raw(error_message(invalid, country.errors.full_messages_for(:name))) %>

  <%= form.submit I18n.t('actions.save'), class: "btn btn-success" %>
<% end %>

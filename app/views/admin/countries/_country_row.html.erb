<tr class="hover:bg-base-300">
  <td><%= country.name %></td>
  <td>
    <div class="tooltip" data-tip="<%= I18n.t('actions.show') %>">
      <%= link_to icon('show'), [:admin, country], class: "btn btn-sm btn-soft btn-info" %>
    </div>
    <div class="tooltip" data-tip="<%= I18n.t('actions.edit') %>">
      <%= link_to icon('edit'), edit_admin_country_path(country), class: "btn btn-sm btn-soft btn-success" %>
    </div>
    <div class="tooltip" data-tip="<%= I18n.t('actions.delete') %>">
      <%= link_to icon('delete'), delete_admin_country_path(country), class: "btn btn-sm btn-soft btn-warning" %>
    </div>
  </td>
</tr>

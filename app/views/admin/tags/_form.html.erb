<%= form_with(model: [:admin, tag], class: "grid gap-4 w-1/3") do |form| %>

  <% invalid = tag.errors.include?(:id) %>
  <%= form.label :id, I18n.t('attributes.tag.id'), class: "floating-label" do %>
    <%= form.text_field :id, class: "input w-full validator #{'input-error' if invalid}", required: true, placeholder: I18n.t('attributes.tag.id') %>
    <span><%= I18n.t('attributes.tag.id') %></span>
  <% end %>
  <%= raw(error_message(invalid, tag.errors.full_messages_for(:id))) %>

  <% invalid = tag.errors.include?(:name) %>
  <%= form.label :name, I18n.t('attributes.tag.name'), class: "floating-label" do %>
    <%= form.text_field :name, class: "input w-full validator #{'input-error' if invalid}", required: true, placeholder: I18n.t('attributes.tag.name') %>
    <span><%= I18n.t('attributes.tag.name') %></span>
  <% end %>
  <%= raw(error_message(invalid, tag.errors.full_messages_for(:name))) %>

  <%= form.submit I18n.t('actions.save'), class: "btn btn-success" %>
<% end %>

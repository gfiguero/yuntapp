<% content_for :title, "Iniciar Sesión" %>

<div class="card bg-base-100 shadow-lg">
  <div class="card-body">
    <h2 class="card-title text-2xl font-bold justify-center mb-2">Iniciar Sesión</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "grid gap-4" }) do |f| %>

      <%= f.label :email, "Email", class: "floating-label" do %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input w-full", placeholder: "Email" %>
        <span>Email</span>
      <% end %>

      <%= f.label :password, "Contraseña", class: "floating-label" do %>
        <%= f.password_field :password, autocomplete: "current-password", class: "input w-full", placeholder: "Contraseña" %>
        <span>Contraseña</span>
      <% end %>

      <label class="flex items-center gap-2 cursor-pointer">
        <%= f.check_box :remember_me, class: "checkbox checkbox-sm" %>
        <span class="label-text">Recordarme</span>
      </label>

      <%= f.submit "Iniciar Sesión", class: "btn btn-primary w-full" %>
    <% end %>
  </div>
</div>

<%= render "users/shared/links" %>

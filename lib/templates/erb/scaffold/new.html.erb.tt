<%% content_for :title do %>
  <%%= I18n.t('views.title.<%= plural_table_name %>') %>
<%% end %>

<%% content_for :breadcrumb do %>
  <li><%%= link_to I18n.t('views.title.<%= plural_table_name %>'), <%= index_helper %>_path %></li>
  <li><%%= I18n.t('actions.new') %></li>
<%% end %>

<div class="w-full">
  <h1 class="font-bold text-4xl my-4"><%%= I18n.t('views.title.<%= plural_table_name %>') %></h1>
  <h3 class="font-bold text-xl mb-4"><%%= I18n.t('views.headers.new') %></h3>
  <%%= render "buttons" %>
  <%%= render "form", <%= singular_table_name %>: @<%= singular_table_name %> %>
</div>
